{
  "extends": "@tarantool.io/typescript/configs/web",
  "include": ["./src"],
  "exclude": ["**/*.js", "**/*.spec.*", "**/*.test.*"],
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false, // TODO: Remove after all migrations (flow -> typescript)
    "outDir": "./build",
    "sourceMap": true,
    "preserveConstEnums": true,
    "isolatedModules": false,
    "paths": {
      "src/*": ["src/*"]
    }
  }
}
